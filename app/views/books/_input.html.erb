<div class="wrapper book_input">
  <div class="header">
    <%= link_to 'Bookリストに戻る', root_path %>
  </div>
  
  <hr>
  
  <h2>Book登録</h2>
  
  <%= form_for @book do |f| %>
    <% if @book.errors.any? %>
      <div class="alert alert-danger">
        <% @book.errors.full_messages.each do |message| %>
          <p class="alert"><%= message %></p>
        <% end %>
      </div>
    <% end %>
  
    <div class="form-group">
      <%= f.label :title %><br/>
      <%= f.text_field :title, autofocus: true, class: 'form-control' %>
    </div>
  
    <div class="form-group">
      <%= f.label :author %><br/>
      <%= f.text_field :author, class: 'form-control' %>
    </div>
  
    <div class="form-group">
      <%= f.label :publisher %><br/>
      <%= f.text_field :publisher, class: 'form-control' %>
    </div>
  
    <div class="form-group">
      <%= f.label :price %><br/>
      <%= f.number_field :price, class: 'form-control' %>
    </div>
  
    <div class="form-group">
      <%= f.label :publish_date %><br/>
      <%= f.date_field :publish_date, class: 'form-control' %>
    </div>
  
    <div class="form-group">
      <%= f.label :caption %><br/>
      <%= f.text_area :caption, class: 'form-control', rows: 3 %>
    </div>
  
    <div class="form-group">
      <%= f.label :image %><br/>
      <%= f.file_field :image %>
      <%= f.hidden_field :image_cache %>
    </div>
    
    <div class="form-group">
      <%= f.label :category %><br/>
      <%= f.collection_select :category_id, Category.all, :id, :name %>
    </div>
    
    <div class="actions">
      <%= f.submit "登録", class: 'btn btn-primary' %>
    </div>
    
  <% end %>  
  
</div>